{
  "name": "frontend-e2e-testing",
  "version": "1.0.0",
  "description": "🎭 Приклади E2E та компонентного тестування з Playwright + TypeScript",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:e2e": "playwright test --project=e2e",
    "test:component": "playwright test --config=playwright-ct.config.ts",
    "test:ct": "playwright test --config=playwright-ct.config.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "report": "playwright show-report",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "e2e",
    "component-testing",
    "vue",
    "typescript",
    "frontend-testing"
  ],
  "author": "Frontend School",
  "license": "MIT",
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/experimental-ct-vue": "1.53.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "24.0.2",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/tsconfig": "^0.5.0",
    "fake-indexeddb": "^5.0.0",
    "msw": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=18"
  }
}
